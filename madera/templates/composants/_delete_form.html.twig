<form method="post" action="{{ path('composants_delete', {'id': composant.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ composant.id) }}">
    <button class="btn btn-danger ml-3"><i class="fas fa-trash"></i> Supprimer</button>
</form>
