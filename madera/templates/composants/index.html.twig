{% extends 'base.html.twig' %}

{% block title %}Composants index{% endblock %}

{% block body %}
<div class="row">
    <div class="card col-md-10 offset-1 mt-3 p-0">
        <div class="card-header bg-perso text-white">
            <h1>Composants index</h1>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Libelle_composant</th>
                        <th>Caracteristique</th>
                        <th>Unite_usage</th>
                        <th>Prix_base</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for composant in composants %}
                    <tr>
                        <td>{{ composant.libelleComposant }}</td>
                        <td>{{ composant.caracteristique }}</td>
                        <td>{{ composant.uniteUsage }}</td>
                        <td>{{ composant.prixBase }}</td>
                        <td>
                            <a href="{{ path('composants_show', {'id': composant.id}) }}"><i class="fas fa-eye"></i>show</a>
                            <a href="{{ path('composants_edit', {'id': composant.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    <a href="{{ path('composants_new') }}">Create new</a>
{% endblock %}
