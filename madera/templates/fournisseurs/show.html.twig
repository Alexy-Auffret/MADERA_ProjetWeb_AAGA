{% extends 'base.html.twig' %}

{% block title %}Fournisseurs{% endblock %}

{% block body %}
<div class="container">
    <div class="col-md-12 card mt-2 p-0" >
        <div class="card-header bg-perso text-white">
            <h1 class="d-inline-flex col-md-10">Fournisseurs</h1>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ fournisseur.id }}</td>
                    </tr>
                    <tr>
                        <th>Raison_sociale</th>
                        <td>{{ fournisseur.raisonSociale }}</td>
                    </tr>
                    <tr>
                        <th>Num_tel</th>
                        <td>{{ fournisseur.numTel }}</td>
                    </tr>
                    <tr>
                        <th>Contact_nom_complet</th>
                        <td>{{ fournisseur.contactNomComplet }}</td>
                    </tr>
                    <tr>
                        <th>Mail</th>
                        <td>{{ fournisseur.mail }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-perso">
            <a class="d-inline-block btn btn-secondary ml-3" href="{{ path('fournisseurs_index') }}">Retour</a>
            <a class="d-inline-block btn btn-warning ml-3" href="{{ path('fournisseurs_edit', {'id': fournisseur.id}) }}">edit</a>
            <a class="d-inline-block">{{ include('fournisseurs/_delete_form.html.twig') }}</a>
        </div>
{% endblock %}
