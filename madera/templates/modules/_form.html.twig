    {{ form_errors(form.hauteur_module) }}
    {{ form_row(form.longueur_module) }}
    {{ form_errors(form.longueur_module) }}
    {{ form_row(form.plan_coupe) }}
    {{ form_errors(form.plan_coupe) }}
    {{ form_row(form.parametre_prix) }}
    {{ form_errors(form.parametre_prix) }}
    {{ form_row(form.cctp) }}
    {{ form_errors(form.cctp) }}
    {{ form_row(form.is_modele) }}
    {{ form_errors(form.is_modele) }}
    {{ form_row(form.remplissage) }}
