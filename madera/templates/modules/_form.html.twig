    {% for montantsField in form.montants %}
        <li>
            {{ form_errors(montantsField) }}
            {{ form_widget(montantsField) }}
        </li>
    {% endfor %}
    </ul>
    {{ form_row(form.huisseries) }}
    {{ form_errors(form.huisseries) }}
