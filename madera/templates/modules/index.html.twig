{% extends 'base.html.twig' %}

{% block title %}Modules index{% endblock %}

{% block body %}
    <h1>Modules index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle_module</th>
                <th>Hauteur_module</th>
                <th>Longueur_module</th>
                <th>Plan_coupe</th>
                <th>Parametre_prix</th>
                <th>Cctp</th>
                <th>Is_modele</th>
                <th>Remplissage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for module in modules %}
            <tr>
                <td>{{ module.id }}</td>
                <td>{{ module.libelleModule }}</td>
                <td>{{ module.hauteurModule }}</td>
                <td>{{ module.longueurModule }}</td>
                <td>{{ module.planCoupe }}</td>
                <td>{{ module.parametrePrix }}</td>
                <td>{{ module.cctp }}</td>
                <td>{{ module.isModele ? 'Yes' : 'No' }}</td>
                <td>{{ module.Remplissage }}</td>
                <td>
                    <a href="{{ path('modules_show', {'id': module.id}) }}">show</a>
                    <a href="{{ path('modules_edit', {'id': module.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('modules_new') }}">Create new</a>
{% endblock %}
